@model WebApplication1.Models.usuarios

<head>
    @{
        ViewBag.Title = "Home Page";
    }
</head>

<h2>Bienvenidos</h2>

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
<div class="form-horizontal">
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.nameuser, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.nameuser, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.pw, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.pw, new { htmlAttributes = new { @class = "form-control" } })
         
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="Login" runat="server" type="submit" class="btn btn-default" value="Ingresar" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.ValidationMessageFor(model => model.loginErrorMensaje, "", new { @class = "text-danger" })
            <label class="text-warning">@Html.DisplayFor(model => model.loginErrorMensaje)</label>
        </div>
    </div>
    </div>
    }



